<%- include ./layouts/header.ejs %>

<body class="body-scroll d-flex flex-column h-100" data-page="signin">

    <!-- loader section -->
    <%- include ./layouts/loading.ejs %>
    <!-- loader section ends -->

    <!-- Begin page content -->
    <main class="container-fluid h-100 ">
        <div class="row h-100">
            <div class="col-11 col-sm-11 mx-auto">
                <!-- header -->
                <div class="row">
                    <header class="header">
                        <div class="row">
                            <div class="col">
                                <div class="logo-small">
                                    <img src="/images/gmg.png" alt="" />
                                    <h5><span class="text-secondary fw-light">GMG</span><br />INVEST</h5>
                                </div>
                            </div>
                        </div>
                    </header>
                </div>
                <!-- header ends -->
            </div>
            <form action="/app/login_app" method="post">
                <div class="col-11 col-sm-11 col-md-6 col-lg-5 col-xl-3 mx-auto align-self-center py-4">
                    <h1 class="mb-4"><span class="text-secondary fw-light">Đăng nhập</span><br />Tài khoản của bạn</h1>

                    <div class="form-group form-floating mb-3 is-valid">
                        <input type="text" class="form-control" type="username" name="username"
                        onkeypress="this.value = this.value + event.key.toUpperCase(); return false;"
                        style="text-transform: uppercase" id="username">
                        <label class="form-control-label" for="email">Tài khoản</label>
                    </div>

                    <div class="form-group form-floating is-valid mb-3">
                        <input class="form-control " type="password" name="password" id="password">
                        <label class="form-control-label" for="password">Mật khẩu</label>
                    </div>
                </div>
                
                <% if (message) { %>
                    <p id="mess"
                        style="font-size: 16px; color: rgb(248, 49, 49); text-align: center;">
                        <%= message %>
                    </p>
                <% } %>
                <div class="col-11 col-sm-11 mt-auto mx-auto py-4">
                    <div class="row ">
                        <div class="col-12 d-grid">
                            <button type="submit" class="btn btn-default btn-lg shadow-sm">Đăng nhập NĐT</button>
                        </div>
                    </div>
                </div>
                <div class="col-11 col-sm-11 mt-auto mx-auto py-4">
                    <div class="row ">
                        <div class="col-12 d-grid">
                            <a href="/sale/login" class="btn btn-default btn-lg shadow-sm">đăng nhập sale</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>


    <%- include ./layouts/footer.ejs %>