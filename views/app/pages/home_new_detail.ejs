    <!-- Begin page -->
    <main class="h-100">

        <!-- Header -->
        <header class="header position-fixed">
            <div class="row">
                <div class="col-auto">
                    <a href="javascript:history.back()" class="btn btn-light btn-44" style="line-height: 38px;">
                        <i class="bi bi-backspace"></i>
                    </a>
                </div>
                <div class="col" style="text-align: right !important;">
                    <div class="logo-small">
                        <img src="/images/gmg.png" alt="" />
                        <h5><span class="text-secondary fw-light">GMG</span><br />Tin tức</h5>
                    </div>
                </div>
            </div>
        </header>
        <!-- Header ends -->

        <!-- main page content -->
        <div class="main-container container">
            <div class="row">
                <div class="col-12 px-0">
                    <div class="card mb-4 overflow-hidden shadow-sm card-theme text-white rounded-0">
                        <div class="overlay"></div>
                        <div class="coverimg h-100 w-100 position-absolute opacity-3">
                            <img src="<%= tin_tucs_detail.anh_dai_dien %>" alt="">
                        </div>
                        <div class="card-body">
                            <div class="row mb-5">
                                <div class="col">
                                    <span class="tag bg-theme">Trending</span>
                                </div>
                                <div class="col-auto">
                                    <button
                                        class="btn btn-info text-white avatar avatar-40 p-0 rounded-circle shadow-sm"><i
                                            class="bi bi-share"></i></button>
                                    <button
                                        class="btn btn-success text-white avatar avatar-40 p-0 rounded-circle shadow-sm"><i
                                            class="bi bi-bookmark"></i></button>
                                </div>
                            </div>
                            <br>
                            <a href="" class="h4 mb-1 text-normal d-block text-white"><%= tin_tucs_detail.tieu_de %></a>
                            <p class="mb-3">Ngày đăng: <%= tin_tucs_detail.create_date.getDate() %>/<%= tin_tucs_detail.create_date.getMonth() +1 %>/<%= tin_tucs_detail.create_date.getFullYear() %></p>
                        </div>
                    </div>
                </div>
                <div class="row" id="ro" style="padding-left: 20px; padding-right: 0;">
                    <div class="col-12 col-md-10 col-lg-8 mx-auto">
                        <div id="snippet-classic-editor">
                            <%- tin_tucs_detail.noi_dung %>
                        </div>
                        <style>
                            #snippet-classic-editor img{
                                width: 100%;
                            }
                        </style>
                    </div>
                </div>
                <div class="row" style="margin-top: 5%;">
                    <h4 style="margin-bottom: 5%;">Tin tức mới</h4>
                    <% tin_tucs_1.forEach(function(tin_tuc){ %>
                    <div class="col-12 col-md-6 col-lg-4">
                        <a href="/app/tin-tuc=<%= tin_tuc._id %>" class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-auto">
                                        <div class="avatar avatar-60 shadow-sm rounded-10 coverimg">
                                            <img src="<%= tin_tuc.anh_dai_dien %>" alt="">
                                        </div>
                                    </div>
                                    <div class="col align-self-center ps-0">
                                        <p class="mb-1" style="font-size: 14px;"><%= tin_tuc.tieu_de %></p>
                                        <p class="mb-1" style="font-size: 12px; color: silver;">Tác giả: Công ty cổ phần tập đoàn chợ toàn cầu</p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% }); %>
