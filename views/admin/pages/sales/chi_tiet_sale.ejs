                                                                                                function convert_block_three(number) {
                                                                                                if(number == '000') return '';
                                                                                                var _a = number + ''; //Convert biến 'number' thành kiểu string
    
                                                                                                //Kiểm tra độ dài của khối
                                                                                                switch (_a.length) {
                                                                                                    case 0: return '';
                                                                                                    case 1: return chuHangDonVi[_a];
                                                                                                    case 2: return convert_block_two(_a);
                                                                                                    case 3: 
                                                                                                    var chuc_dv = '';
                                                                                                    if (_a.slice(1,3) != '00') {
