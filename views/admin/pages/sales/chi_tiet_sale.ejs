                                                                                                    }
                                                                                                }
    
                                                                                                return chuc + '' + append + ' ' + dv; 
                                                                                                }
                                                                                                const dvBlock = '1 nghìn triệu tỷ'.split(' ');
    
                                                                                                function to_vietnamese(number) {
