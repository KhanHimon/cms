                                                                                                    var tram = chuHangTram[_a[0]] + ' trăm';
                                                                                                    return tram + ' ' + chuc_dv;
                                                                                                }
                                                                                                }
    
                                                                                                function convert_block_two(number) {
                                                                                                var dv = chuHangDonVi[number[1]];
                                                                                                var chuc = chuHangChuc[number[0]];
                                                                                                var append = '';
    
                                                                                                // Nếu chữ số hàng đơn vị là 5
