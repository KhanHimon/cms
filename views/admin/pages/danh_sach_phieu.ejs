<%- include ../layouts/header.ejs %>
<% if (sale) { %>
    <!-- Begin page -->
    <div id="layout-wrapper">
        <header id="page-topbar">
    <div class="layout-width">
        <%- include ../layouts/nav_header.ejs %>
    </div>
</header>
        <!-- ========== App Menu ========== -->
        <%- include ../layouts/left_menu.ejs %>
        <!-- Left Sidebar End -->
        <!-- Vertical Overlay-->
        <div class="vertical-overlay"></div>

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                <h4 class="mb-sm-0">Phiếu thông tin khách hàng</h4>

                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="javascript: void(0);">Phiếu thông tin khách hàng</a></li>
                                        <li class="breadcrumb-item active">Thêm mới</li>
                                    </ol>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row">
                        <div class="col">

                            <div class="h-100">

                                <div class="row">
                                    <div class="col-xl-12">
                                        <div class="card">
                                            <div class="card-header align-items-center d-flex">
                                                <h4 class="card-title mb-0 flex-grow-1">Phiếu thông tin khách hàng</h4>
                                            </div>
                                            <div class="card-body">
                                                <div class="table-responsive table-card">
                                                    <table class="table table-borderless table-centered align-middle table-nowrap mb-0">
                                                        <thead class="text-muted table-light">
                                                            <tr>
                                                                <th>STT</th>
                                                                <th scope="col">Tư vấn viên</th>
                                                                <th scope="col">Khách hàng</th>
                                                                <th scope="col">Ngày sinh</th>
                                                                <th scope="col">Điện thoại</th>
                                                                <th scope="col">Email</th>
                                                                <th scope="col">CMND/CCCD</th>
                                                                <th scope="col">Số tiền</th>
                                                                <th scope="col">Trạng thái</th>
                                                                <th scope="col">Thời gian</th>
                                                                <th scope="col"></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody style="font-size: 16px;">
                                                            <% var id = 0 %>
                                                            <% phieu_thong_tin.forEach(function(phieu_thong_tin){ id++ %>
                                                                <tr>
                                                                    <td style="text-align: center;"><%= id %></td>
                                                                    <td><%= phieu_thong_tin.ma_gioi_thieu.ho_va_ten %></td>
                                                                    <td><%= phieu_thong_tin.ho_va_ten_khach_hang %></td>
                                                                    <td><%= phieu_thong_tin.ngay_sinh.getDate() %>/<%= phieu_thong_tin.ngay_sinh.getMonth() +1 %>/<%= phieu_thong_tin.ngay_sinh.getFullYear() %></td>
                                                                    <td>0<%= phieu_thong_tin.dien_thoai %></td>
                                                                    <td><%= phieu_thong_tin.email %></td>
                                                                    <td><%= phieu_thong_tin.cmnd_cccd %></td>
                                                                    <td><%= phieu_thong_tin.so_tien_dau_tu.toLocaleString(); %> đ</td>
                                                                    <td><%= phieu_thong_tin.trang_thai.ten_trang_thai %></td>
                                                                    <td><%= phieu_thong_tin.ngay_tao.getDate() %>/<%= phieu_thong_tin.ngay_tao.getMonth() +1 %>/<%= phieu_thong_tin.ngay_tao.getFullYear() %>(<%= phieu_thong_tin.ngay_tao.getHours() %>h<%= phieu_thong_tin.ngay_tao.getMinutes() %> phút)</td>
                                                                    <td></td>
                                                                </tr>
                                                            <% }); %>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div> <!-- end row-->

                            </div> <!-- end .h-100-->

                        </div> <!-- end col -->
                    </div>

                </div>
                <!-- container-fluid -->
            </div>
            <!-- End Page-content -->

            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            <script>document.write(new Date().getFullYear())</script>© Bản quyền thuộc về công ty cổ phần tập đoàn chợ toàn cầu.
                        </div>
                        <div class="col-sm-6">
                            <div class="text-sm-end d-none d-sm-block">
                                Design & Develop by Lê Tuấn Khang
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->



    <!--start back-to-top-->
    <button onclick="topFunction()" class="btn btn-danger btn-icon" id="back-to-top">
        <i class="ri-arrow-up-line"></i>
    </button>
    <!--end back-to-top-->

    <div class="customizer-setting d-none d-md-block">
        <div class="btn-info btn-rounded shadow-lg btn btn-icon btn-lg p-2" data-bs-toggle="offcanvas" data-bs-target="#theme-settings-offcanvas" aria-controls="theme-settings-offcanvas">
            <i class='mdi mdi-spin mdi-cog-outline fs-22'></i>
        </div>
    </div>
    <% } %>
<%- include ../layouts/footer.ejs %>