                                                                                                            <% var vung_index = 0 %>
                                                                                                            <% vungs.forEach(function(vung){ vung_index++ %>
                                                                                                                <option value="<%= vung._id %>"><%= vung_index %>. <%= vung.ten_vung %></option>
                                                                                                            <% }); %>
                                                                                                        </select>
                                                                                                    </div>
                                                                                                </div>
                                                                                                <div class="col-md-3">
                                                                                                    <div class="mb-3">
                                                                                                        <label for="tinh" class="form-label">Tỉnh</label>
                                                                                                        <select class="form-control" id="tinh" data-choices data-choices-groups data-placeholder="Chọn Tỉnh" name="tinh">
                                                                                                            <option value="6309a0cc6d6575d010cc2eea">Chọn tỉnh</option>
                                                                                                            <% var tinh_index = 0 %>
                                                                                                            <% tinhs.forEach(function(tinh){ tinh_index++ %>
                                                                                                                <option value="<%= tinh._id %>"><%= tinh_index %>. <%= tinh.ten_tinh %></option>
                                                                                                            </optgroup>
                                                                                                            <% }); %>
                                                                                                        </select>
                                                                                                    </div>
                                                                                                </div>
                                                                                                <div class="col-md-12">
                                                                                                    <div class="mb-3">
                                                                                                        <label for="dia_chi" class="form-label">Địa chỉ thường trú</label>
                                                                                                        <input type="text" class="form-control" placeholder="Nhập địa chỉ thường trú" id="dia_chi" name="dia_chi">
                                                                                                    </div>
                                                                                                </div>
                                                                                                <!--end col-->
                                                                                                <div class="col-md-6">
                                                                                                    <div class="mb-3">
                                                                                                        <label for="so_dien_thoai" class="form-label">Số điện thoại</label>
                                                                                                        <input type="tel" class="form-control" placeholder="+(84) 444 78765" id="dien_thoai" name="dien_thoai">
                                                                                                    </div>
                                                                                                </div>
                                                                                                <!--end col-->
                                                                                                <div class="col-md-6">
                                                                                                    <div class="mb-3">
                                                                                                        <label for="email" class="form-label">Email</label>
                                                                                                        <input type="email" class="form-control" placeholder="example@gamil.com" id="email" name="email">
                                                                                                    </div>
                                                                                                </div>
                                                                                                <!--end col-->
                                                                                                <div class="col-md-4">
                                                                                                    <div class="mb-3">
                                                                                                        <label for="so_tai_khoan" class="form-label">Số tài khoản</label>
                                                                                                        <input type="number" class="form-control" placeholder="Nhập số tài khoản" id="so_tai_khoan" name="so_tai_khoan">
                                                                                                    </div>
                                                                                                </div>
                                                                                                <div class="col-md-4">
                                                                                                    <div class="mb-3">
                                                                                                        <label for="ngan_hang" class="form-label">Ngân hàng</label>
                                                                                                        <input type="text" class="form-control" placeholder="Nhập ngân hàng" id="ngan_hang" name="ngan_hang">
                                                                                                    </div>
                                                                                                </div>
                                                                                                <div class="col-md-4">
                                                                                                    <div class="mb-3">
                                                                                                        <label for="chi_nhanh" class="form-label">Chi nhánh</label>
                                                                                                        <input type="text" class="form-control" placeholder="Nhập chi nhánh" id="chi_nhanh" name="chi_nhanh">
                                                                                                    </div>
                                                                                                </div>
                                                                                                <!--end col-->
                                                                                                <div class="col-md-3">
                                                                                                    <div class="mb-3">
                                                                                                        <label for="ma_gioi_thieu" class="form-label">Mã cấp trên</label>
                                                                                                        <input type="text" class="form-control" placeholder="Nhập mã giới thiệu" id="ma_code" name="ma_code" >
                                                                                                    </div>
                                                                                                </div>
                                                                                                <div class="col-md-4">
                                                                                                    <div class="mb-3">
                                                                                                        <label for="nhom_kinh_doanh" class="form-label">Đội nhóm kinh doanh</label>
                                                                                                        <select class="form-select mb-3" aria-label=".form-select-lg example"  id="nhom_kinh_doanh" name="nhom_kinh_doanh">
                                                                                                            <option selected>Chọn nhóm kinh doanh</option>
                                                                                                            <% var nhom_index = 0 %>
                                                                                                            <% nhoms.forEach(function(nhom){ nhom_index++ %>
                                                                                                                <option value="<%= nhom._id %>"><%= nhom_index %>.Nhóm kinh doanh <%= nhom.ten_nhom %></option>
                                                                                                            <% }); %>
                                                                                                        </select>
                                                                                                    </div>
                                                                                                </div>
                                                                                                <div class="col-md-3">
                                                                                                    <div class="mb-3">
                                                                                                        <label for="chuc_vu" class="form-label">Chức vụ</label>
                                                                                                        <select class="form-select mb-3" aria-label=".form-select-lg example"  id="chuc_vu" name="chuc_vu">
                                                                                                            <option selected>Chọn chức vụ</option>
                                                                                                            <% var chuc_vu_index = 0 %>
                                                                                                            <% chuc_vus.forEach(function(chuc_vu){ chuc_vu_index++ %>
                                                                                                                <option value="<%= chuc_vu._id %>"><%= chuc_vu_index %>. <%= chuc_vu.ten_chuc_vu %></option>
                                                                                                            <% }); %>
                                                                                                        </select>
                                                                                                    </div>
                                                                                                </div>
                                                                                                <!--end col-->
                                                                                            </div>
