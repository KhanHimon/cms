
<%- include ../layouts/header_sale.ejs %>
<body class="body-scroll" data-page="index">
    <%- include ../layouts/loading_sale.ejs %>
    <%- include ../layouts/sidebar_sale.ejs %>
    <main class="h-100">
        <header class="header position-fixed">
            <div class="row">
                <div class="col-auto">
                    <a href="javascript:void(0)" target="_self" class="btn btn-light btn-44 menu-btn">
                        <i class="bi bi-list"></i>
                    </a>
                </div>
                <div class="col text-center">
                    <div class="logo-small">
                        <img src="/images/gmg.png" alt="" />
                        <h5><span class="text-secondary fw-light">GMG</span><br />Invest</h5>
                    </div>
                </div>
                <div class="col-auto">
                    <a href="/sale/thong-tin-ca-nhan/<%= sale.id %>" target="_self" class="btn btn-light btn-44">
                        <i class="bi bi-person-circle"></i>
                        <span class="count-indicator"></span>
                    </a>
                </div>
            </div>
        </header>
        <div class="main-container container">
            <div class="row">
                <div class="col-12">
                    <% hop_dongs.forEach(function(hop_dong){ %>
                        <% if (sale.ma_gioi_thieu === hop_dong.khach_hang.ma_gioi_thieu) { %>
                            <div class="col-12 col-md-6 col-lg-4">
                                <a href="/sale/hop-dong=<%= hop_dong.id %>/<%= sale.id %>" class="card mb-3">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-auto">
                                                <div class="avatar avatar-60 shadow-sm rounded-10 coverimg">
                                                    <i class="bi bi-file-earmark-text"></i>
                                                </div>
                                            </div>
                                            <div class="col align-self-center ps-0">
                                                <p class="mb-1" style="font-size: 14px;">Mã HĐ : <%= hop_dong.ma_hop_dong %> - <%= hop_dong.khach_hang.ho_va_ten %></p>
                                                <p class="text-muted size-18">Đầu tư : <%= hop_dong.so_tien_dau_tu.toLocaleString() %> đ</p>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        <% } %>
                    <% }); %>
                </div>
            </div>
        </div>
    </main>
    <%- include ../layouts/tab_sale.ejs %>
<%- include ../layouts/footer_sale.ejs %>