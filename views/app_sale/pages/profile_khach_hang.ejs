
<%- include ../layouts/header_sale.ejs %>
<body class="body-scroll" data-page="index">
    <%- include ../layouts/loading_sale.ejs %>
    <%- include ../layouts/sidebar_sale.ejs %>
    <main class="h-100">
        <header class="header position-fixed">
            <div class="row">
                <div class="col-auto">
                    <a href="javascript:history.back()" class="btn btn-light btn-44" style="line-height: 38px;">
                        <i class="bi bi-backspace"></i>
                    </a>
                </div>
                <div class="col text-center">
                    <div class="logo-small">
                        <img src="/images/gmg.png" alt="" />
                        <h5><span class="text-secondary fw-light">GMG</span><br />Invest</h5>
                    </div>
                </div>
                <div class="col-auto">
                    <a href="/sale/thong-tin-ca-nhan/<%= sale.id %>" target="_self" class="btn btn-light btn-44">
                        <i class="bi bi-person-circle"></i>
                        <span class="count-indicator"></span>
                    </a>
                </div>
            </div>
        </header>
        <div class="main-container container">
            <div class="row">
                <div class="col-12 profile-page">
                    <div class="clearfix"></div>
                    <div class="circle small one"></div>
                    <div class="circle small two"></div>
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="282.062"
                        height="209.359" viewBox="0 0 282.062 209.359" class="menubg">
                        <defs>
                            <linearGradient id="linear-gradient" x1="0.5" x2="0.5" y2="1"
                                gradientUnits="objectBoundingBox">
                                <stop offset="0" stop-color="#09b2fd" />
                                <stop offset="1" stop-color="#6b00e5" />
                            </linearGradient>
                        </defs>
                        <path id="profilebg"
                            d="M751.177,233.459c-28.511,1.567-38.838,7.246-61.77,27.573s-27.623,71.926-65.15,70.883-27.624-21.369-79.744-40.132-47.13-53.005-23.676-84.8,4.009-57.671,33-75.867,83.269,30.223,127.232,21.5,64.157-41.353,82.329-26,5.953,29.138,8.773,46.369,13.786,23.5,13.786,37.91S779.688,231.893,751.177,233.459Z"
                            transform="translate(-503.892 -122.573)" fill="url(#linear-gradient)" />
                    </svg>


                    <div class="row my-3 py-4">
                        <div class="col-7 align-self-center">
                            <h3 class="mb-2"><%= user.ho_va_ten %></h3>
                            <p class="text-muted size-12">Ngày sinh: <%= user.nam_sinh.getDate() %>/<%= user.nam_sinh.getMonth() +1 %>/<%= user.nam_sinh.getFullYear() %></p>
                        </div>
                        <div class="col align-self-center">
                            <figure class="avatar avatar-100 rounded-20 p-1 bg-white shadow-sm">
                                <img src="assets/img/user1.jpg" alt="" class="rounded-18">
                            </figure>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- location map-->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <center><p>Thông tin cá nhân</p></center>
                                </div>
                                <div class="col-8">
                                    <p class="text-secondary">CMND/CCCD: <%= user.cccd_cmnd %></p>
                                </div>
                                <div class="col-4">
                                    <p class="text-secondary">Dân tộc: <%= user.dan_toc %></p>
                                </div>
                                <div class="col-12">
                                    <p class="text-secondary">Số điện thoại: 0<%= user.so_dien_thoai %></p>
                                </div>
                                <div class="col-12">
                                    <p class="text-secondary">Email: <%= user.email %></p>
                                </div>
                                <div class="col-12">
                                    <p class="text-secondary">Địa chỉ: <%= user.dia_chi %></p>
                                </div>
                                <div class="col-6">
                                    <p class="text-secondary">Ngân hàng: <%= user.ngan_hang %></p>
                                </div>
                                <div class="col-6">
                                    <p class="text-secondary">Chi nhánh: <%= user.chi_nhanh %></p>
                                </div>
                                <div class="col-12">
                                    <p class="text-secondary">STK: <%= user.so_tai_khoan %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- My Frequent Payments -->
            <div class="row mb-3">
                <div class="col">
                    <h6 class="title">Danh sách hợp đồng</h6>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-12">
                    <div class="card shadow-sm mb-4 ">
                        <ul class="list-group list-group-flush bg-none">
                            <% hop_dongs.forEach(function(hop_dongs){ %>
                                <% if (hop_dongs.khach_hang.id == user.id) { %>
                                    <li class="list-group-item border-0">
                                        <a href="/sale/hop-dong=<%= hop_dongs.id %>/<%= sale._id %>">
                                        <div class="row">
                                            <div class="col-auto">
                                                <div class="card">
                                                    <div class="card-body p-1">
                                                        <figure class="avatar avatar-44 rounded-15">
                                                            <img src="/images/gmg.png" alt="">
                                                        </figure>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col">
                                                
                                                    <p><%= hop_dongs.ma_hop_dong %><br><small class="text-secondary"><%= hop_dongs.so_tien_dau_tu.toLocaleString() %> vnđ</small></p>
                                                
                                            </div>
                                            <div class="col-auto text-end">
                                                <p>Ngày ký<br><small class="text-secondary"><%= hop_dongs.ngay_ky_hop_dong.getDate() %>-<%= hop_dongs.ngay_ky_hop_dong.getMonth() +1 %>-<%= hop_dongs.ngay_ky_hop_dong.getFullYear() %></small></p>
                                            </div>
                                        </div>
                                        </a>
                                    </li>
                                <% } %>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </main>
    <%- include ../layouts/tab_sale.ejs %>
<%- include ../layouts/footer_sale.ejs %>